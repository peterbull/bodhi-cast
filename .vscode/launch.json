{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", // Replace 'main:app' with '<your_file>:<your_app_instance>' if different
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend/app",
            "jinja": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Chrome against localhost client",
            "request": "launch",
            // "preLaunchTask": "npm: start",
            "type": "chrome",
            "url": "http://localhost:3000/",
            "program": "${workspaceFolder}/frontend/my-app/App.js",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/frontend/my-app/node_modules/**/*.js",
                "${workspaceFolder}/frontend/my-app/node_modules/**/*.js"
            ]
        },
        {
            "name": "Backend Current .py File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend:${env:PYTHONPATH}"
            }
        },
    ]
}