{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", // Replace 'main:app' with '<your_file>:<your_app_instance>' if different
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend/app",
            "jinja": false,
            "console": "integratedTerminal"
        }
    ]
}